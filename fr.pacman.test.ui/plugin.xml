<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.pacman.test.ui.commands.category"
            name="Pacman Migration">
      </category>
      <command
            categoryId="fr.pacman.test.ui.commands.category"
            id="fr.pacman.test.ui.commands.generateExpectedCommand"
            name="Generate Expected">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.pacman.test.ui.handlers.GenerateExpectedHandler"
            commandId="fr.pacman.test.ui.commands.generateExpectedCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="fr.pacman.test.ui.commands.generateExpectedCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="fr.pacman.test.ui.commands.generateExpectedCommand"
               id="fr.pacman.test.ui.menus.generateExpectedCommand">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <instanceof
                              value="org.eclipse.core.resources.IFolder">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>

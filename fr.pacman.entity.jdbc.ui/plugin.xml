<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
		point="org.eclipse.ui.handlers">
		<handler
			class="fr.pacman.entity.jdbc.ui.handlers.JdbcGeneratorsHandler"
			commandId="fr.pacman.entity.jdbc.ui.commands.JdbcGeneratorCommand">
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:org.eclipse.ui.popup.any?after=additions">
			<menu
				id="fr.pacman.ui.menus.generators"
				icon="icons/safran.png"
				tooltip="Liste des générateurs Safr@n"
				label="Safr@n">
				<command
					commandId="fr.pacman.entity.jdbc.ui.commands.JdbcGeneratorCommand"
					id="fr.pacman.entity.jdbc.ui.commands.JdbcGeneratorCommand"
					icon="icons/safran.png"
					label="Génération persistance JDBC">
					<visibleWhen
						checkEnabled="false">
						<with
							variable="selection">
							<iterate
								ifEmpty="false"
								operator="and">
								<or>
									<instanceof
										value="org.obeonetwork.dsl.entity.Entity">
									</instanceof>
									<and>
										<instanceof
											value="org.eclipse.core.resources.IFile">
										</instanceof>
										<test
											property="org.eclipse.core.resources.extension"
											value="entity">
										</test>
									</and>
									<test
										property="fr.pacman.commons.ui.testNamespaceEntity"
										forcePluginActivation="true">
									</test>
								</or>
							</iterate>
						</with>
					</visibleWhen>
				</command>
			</menu>
		</menuContribution>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<category
			id="fr.pacman.entity.jdbc.ui.commands.generatorsCategory"
			name="Generators">
		</category>
		<command
			categoryId="fr.pacman.entity.jdbc.ui.commands.generatorsCategory"
			id="fr.pacman.entity.jdbc.ui.commands.JdbcGeneratorCommand"
			name="fr::pacman::entity::generateServerJdbc">
		</command>
	</extension>
	<extension
		point="org.eclipse.core.expressions.propertyTesters">
		<propertyTester
			class="fr.pacman.commons.ui.PacmanUIPropertyTester"
			id="fr.pacman.commons.ui.property.test.eobject"
			namespace="fr.pacman.commons.ui"
			properties="testNamespaceEntity"
			type="org.eclipse.emf.ecore.EObject">
		</propertyTester>
	</extension>
</plugin>


<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.pacman.environment.ui.handlers.EnvironmentGeneratorsHandler"
            commandId="fr.pacman.environment.ui.commands.EnvironmentGeneratorCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="fr.pacman.ui.menus.generators"
               label="Safr@n">
            <command
                  commandId="fr.pacman.environment.ui.commands.EnvironmentGeneratorCommand"
                  id="fr.pacman.environment.ui.commands.EnvironmentGeneratorCommand" 
                  icon="icons/safran.png" 
                  label="Génération des types personnalisés">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="environment">
                           </test>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.pacman.environment.ui.commands.generatorsCategory"
            name="Generators">
      </category>
      <command
            categoryId="fr.pacman.environment.ui.commands.generatorsCategory"
            id="fr.pacman.environment.ui.commands.EnvironmentGeneratorCommand"
            name="fr::pacman::environment::generateCommonEnvironment">
      </command>
   </extension>

</plugin>


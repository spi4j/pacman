[module genLog4j('http://www.obeonetwork.org/dsl/soa/4.0.0', 'http://www.obeonetwork.org/dsl/environment/3.0.0')/]

[import fr::pacman::commons::common::packages/]
[import fr::pacman::commons::common::classes/]
[import fr::pacman::soa::common::packages/]
[import fr::pacman::soa::server::matching::appliMatchAbs/]
[import fr::pacman::soa::common::classes/]
[import fr::pacman::commons::common::log4j/]

[comment encoding = UTF-8 /]
[template public genLog4j(n : environment::Namespace, project : String)]
  [if (project = 'server')]
    [file (n.getServerResourcesDir().filename('', 'log4j2.xml'), overwrite, 'ISO-8859-1')]
      [n.log4j('server')/]
    [/file]
  [elseif (project = 'commons')]
    [file (n.getCommonsTestResourceDir().filename('', 'log4j2.xml'), overwrite, 'ISO-8859-1')]
      [n.log4j('commons')/]
    [/file]
  [/if]
[/template]
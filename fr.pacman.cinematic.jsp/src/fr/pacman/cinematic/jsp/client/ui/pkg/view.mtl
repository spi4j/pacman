[comment : ********************************************************************************************** /]
[comment : Ecriture de la zone commune pour les messages. /]
[template public viewMessenger(root : cinematic::CinematicRoot)]
  [root.getRootState().viewContainers->first().writeViewTechnicalHeader(true)/]
  <div id="[root.getApplicationName().toLower()/]_msg">
  	<% JspControllerMessenger ['messenger'.apply_variableDefault()/] = (JspControllerMessenger)request.getAttribute("fr.spi4j.jsp.messenger");  
  	if (['messenger'.apply_variableDefault()/] != null) {%><fieldset class="<% out.print(['messenger'.apply_variableDefault()/].get_css()); %>"><legend>&nbsp;
  	<% out.print(['messenger'.apply_variableDefault()/].get_title()); %>&nbsp;</legend><% for(int i=0; i < ['messenger'.apply_variableDefault()/].get_messages().size(); i++)
  	{out.print(['messenger'.apply_variableDefault()/].get_messages().get(i) + "<br/>");}%></fieldset> <% } %> 
  </div>	[/template]

[comment : Ecriture pour les surcharges de code javascript specifiques a la page. /]
[template private writeSpecificPageScript(viewContainer : view::ViewContainer) post(self.trim())]
  <script>
  	[(viewContainer.name + ' js').displayClearUserCodeId()/]
  	[protected (viewContainer.getUserCodeId(viewContainer.name + ' js')) startTagPrefix('// ') endTagPrefix('// ')]
     	// Placer ici les portions de javascript personnalisées.
     
     	window.onload = function() {
     		if (typeof document.forms['['/]0] !== 'undefined' &&
     			typeof document.forms['['/]0].elements['['/]2] !== 'undefined') {
     				document.forms['['/]0].elements['['/]2].focus();
     		}
         }
     	
   [/protected]
  		
  </script>[/template]

